<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_gradient" />

    <ImageButton
        android:id="@+id/backButtonGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backgroundImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/auraiLabelGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Aurai"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/outdoorTempGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="24"
        android:textColor="@color/cardview_light_background"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="@+id/roomTempButtonGraph"
        app:layout_constraintStart_toStartOf="@+id/roomTempButtonGraph"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/setLabelGraph"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif"
        android:text="set"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/setTempButtonGraph"
        app:layout_constraintStart_toStartOf="@+id/setTempButtonGraph"
        app:layout_constraintTop_toTopOf="@+id/setTempButtonGraph" />

    <Button
        android:id="@+id/setTempButtonGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="20"
        android:textColor="@color/cardview_light_background"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="@+id/roomTempButtonGraph"
        app:layout_constraintStart_toStartOf="@+id/roomTempButtonGraph"
        app:layout_constraintTop_toBottomOf="@+id/roomTempButtonGraph" />

    <Button
        android:id="@+id/roomTempButtonGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="22"
        android:textColor="@color/cardview_light_background"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weatherTypeImageGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:src="@drawable/rain_cloud"
        app:layout_constraintEnd_toEndOf="@+id/outdoorTempGraph"
        app:layout_constraintStart_toStartOf="@+id/outdoorTempGraph"
        app:layout_constraintTop_toTopOf="@+id/outdoorTempGraph" />

</android.support.constraint.ConstraintLayout>